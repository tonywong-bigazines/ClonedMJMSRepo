@using Abp.Authorization.Users
@using Mahjong.Web.Models.Common.Modals
@using Mahjong.Web.Models.Cards
@model CardListViewModel
@{
    Layout = null;
}
<div class="modal fade" id="CardCreateModal" tabindex="-1" role="dialog" aria-labelledby="CardCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewCard")))
            <form name="userCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="name">@L("CardType")</label>
                        <div class="col-md-9">
                            <select id="cardType" type="text" class="form-control" name="CardType" asp-items="@Model.CardTypeOptions">
                            </select>
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="name">@L("Description")</label>
                        <div class="col-md-9">
                            <input id="name" type="text" class="form-control" name="Description" >
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
