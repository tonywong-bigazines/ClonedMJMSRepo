@using Abp.Authorization.Users
@using Mahjong.Web.Models.Common.Modals
@using Mahjong.Web.Models.Cards
@model EditCardModalViewModel
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditCard")))
<form name="CardEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Card.Id" />
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="name">@L("CardType")</label>
            <div class="col-md-9">
                <select id="cardType" type="text" class="form-control" name="CardType" asp-for="@Model.Card.CardType" asp-items="@Model.CardTypeOptions">
                </select>
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="name">@L("Description")</label>
            <div class="col-md-9">
                <input id="name" type="text" class="form-control" name="Description" value="@Model.Card.Description">
            </div>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Cards/_EditModal.js" asp-append-version="true"></script>
